<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Outfit">

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="58dp"
        android:text="Top"
        android:textSize="20sp"
        app:layout_constraintStart_toEndOf="@+id/imageTop"
        app:layout_constraintTop_toTopOf="@+id/imageTop" />

    <ImageView
        android:id="@+id/imageTop"
        android:layout_width="340px"
        android:layout_height="340px"
        android:layout_marginStart="25dp"
        android:layout_marginTop="108dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:srcCompat="@tools:sample/avatars" />

    <ImageView
        android:id="@+id/imageBottom"
        android:layout_width="340px"
        android:layout_height="340px"
        android:layout_marginStart="25dp"
        android:layout_marginTop="10dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageTop"
        tools:srcCompat="@tools:sample/avatars" />

    <ImageView
        android:id="@+id/imageShoe"
        android:layout_width="340px"
        android:layout_height="340px"
        android:layout_marginStart="25dp"
        android:layout_marginTop="10dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageBottom"
        tools:srcCompat="@tools:sample/avatars" />

    <TextView
        android:id="@+id/RandomFitTV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Generated Outfit"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.146"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.058" />

    <Button
        android:id="@+id/BackButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="28dp"
        android:text="Back"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.813"
        app:layout_constraintStart_toEndOf="@+id/RandomFitTV"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="49dp"
        android:text="Bottom"
        android:textSize="20sp"
        app:layout_constraintStart_toEndOf="@+id/imageBottom"
        app:layout_constraintTop_toTopOf="@+id/imageBottom" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="21dp"
        android:layout_marginTop="52dp"
        android:text="Shoe"
        android:textSize="20sp"
        app:layout_constraintStart_toEndOf="@+id/imageShoe"
        app:layout_constraintTop_toTopOf="@+id/imageShoe" />

</androidx.constraintlayout.widget.ConstraintLayout>